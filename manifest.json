{
  "name": "Gamble Block",
  "description": "Helping combat gambling addictions by blocking gambling websites from being loaded.",
  "version": "1.0",
  "permissions": [
    "webRequestBlocking",
    "webRequest",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "declarativeContent",
    "storage"
  ],
  "background" : {
    "scripts":  [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon120.png"
    }
  },
  "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon120.png"
  },
  "manifest_version": 2
}